# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build admin-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t admin-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system admin-server && \
          adduser --system -G admin-server admin-server

COPY dist/apps/admin-server admin-server
RUN chown -R admin-server:admin-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix admin-server --omit=dev -f install

CMD [ "node", "admin-server" ]
