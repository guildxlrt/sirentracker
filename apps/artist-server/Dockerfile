# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build artist-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t artist-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system artist-server && \
          adduser --system -G artist-server artist-server

COPY dist/apps/artist-server artist-server
RUN chown -R artist-server:artist-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix artist-server --omit=dev -f install

CMD [ "node", "artist-server" ]
