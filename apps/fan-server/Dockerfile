#
# Build the docker image with `npx nx docker-build fan-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t fan-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system fan-server && \
          adduser --system -G fan-server fan-server

COPY dist/apps/fan-server fan-server
RUN chown -R fan-server:fan-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix fan-server --omit=dev -f install

CMD [ "node", "fan-server" ]
