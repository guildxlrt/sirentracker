# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build fans-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t fans-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system fans-server && \
          adduser --system -G fans-server fans-server

COPY dist/apps/fans-server fans-server
RUN chown -R fans-server:fans-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix fans-server --omit=dev -f install

CMD [ "node", "fans-server" ]
