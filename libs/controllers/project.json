{
	"name": "controllers",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/controllers/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/controllers",
				"main": "libs/controllers/src/index.ts",
				"tsConfig": "libs/controllers/tsconfig.lib.json",
				"assets": ["libs/controllers/*.md"]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/controllers/**/*.ts", "libs/controllers/package.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/controllers/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": ["type:lib", "scope:shared"],
	"implicitDependencies": ["shared-utils", "domain", "dto", "infra-backend", "interactors"]
}
