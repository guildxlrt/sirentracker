{
	"name": "usecases",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/usecases/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/usecases",
				"main": "libs/usecases/src/index.ts",
				"tsConfig": "libs/usecases/tsconfig.lib.json",
				"assets": ["libs/usecases/*.md"]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/usecases/**/*.ts", "libs/usecases/package.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/usecases/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": ["type:lib", "scope:shared"]
}
