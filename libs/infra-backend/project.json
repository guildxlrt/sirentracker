{
	"name": "infra-backend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/infra-backend/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/infra-backend",
				"main": "libs/infra-backend/src/index.ts",
				"tsConfig": "libs/infra-backend/tsconfig.lib.json",
				"assets": ["libs/infra-backend/*.md"]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"libs/infra-backend/**/*.ts",
					"libs/infra-backend/package.json"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/infra-backend/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": ["type:lib", "scope:shared"]
}
